<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
<View
    android:layout_width="match_parent"
    android:layout_height="0.1dp"
    android:background="@color/glay"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/atom" />

        <View
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/thing_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/shopitem_number"
            android:textColor="#ff333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/thingnow"
            android:text="@string/overouthome"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            app:srcCompat="@mipmap/delete" />

        <View
            android:layout_width="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/glay" />

    <TextView
        android:id="@+id/gohouse_time"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:gravity="center|left"
        android:paddingLeft="30dp"
        android:text="@string/shopitem_go_timer"
        android:textColor="#ff333333"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/gohome_address"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:gravity="center|left"
        android:paddingLeft="30dp"
        android:text="@string/shopitem_adrress"
        android:textColor="#ff333333"
        android:textSize="13sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/glay"/>
</LinearLayout>

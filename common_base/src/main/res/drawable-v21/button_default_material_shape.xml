<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <inset android:insetLeft="4dp" android:insetTop="6dp" android:insetRight="4dp" android:insetBottom="6dp">
            <shape android:shape="rectangle">

                <corners android:radius="50dp" />
                <solid android:color="@color/primary_background_light_color" />
                <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            </shape>
        </inset>
    </item>
    <item android:state_enabled="false">
        <inset android:insetLeft="4dp" android:insetTop="6dp" android:insetRight="4dp" android:insetBottom="6dp">
            <shape android:shape="rectangle" android:tint="?attr/colorButtonNormal">
                <corners android:radius="50dp" />
                <solid android:color="@color/primary_background_shallow_color" />
                <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            </shape>
        </inset>
    </item>
</selector>